  <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <form action="/new_recipe" method="post" role="form" class="form-group">
          <div class="form-group">
            <label for="name">Recipe name</label>
            <input type="text" class="form-control" name="name" required />
          </div>
          <div class="form-group">
            <label for="recipe">Instructions</label>
            <textarea
              class="form-control"
              name="recipe"
              rows="10"
              required
            ></textarea>
          </div>
          <p><button type="submit" class="btn btn-primary">Create new recipe</button></p>
        </form>
      </div>
    </div>
  </div>
</div>