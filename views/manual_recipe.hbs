{{#each errori}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="row g-3 justify-content-center align-content-center">
  <div class="col-sm-12 col-lg-6 col-md-8 align-content-center">
    <div class="panel panel-default">
      <div class="panel-body">
        <form action="/new_recipe" method="post" role="form" class="form-group">
          <div class="form-group">
            <label for="name" class="fw-bold fs-3">Recipe name</label>
            <input type="text" class="form-control my-1" name="name" required />
          </div>
          <div class="form-group">
            <label for="recipe" class="fw-bold fs-3">Instructions</label>
            <textarea
              class="form-control my-1"
              name="recipe"
              rows="5"
              required
            ></textarea>
          </div>
          <div class="text-center"><button
              type="submit"
              class="btn btn-primary my-2"
            >Create new recipe</button></div>
        </form>
      </div>
    </div>
  </div>
</div>