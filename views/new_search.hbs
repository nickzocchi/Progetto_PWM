{{#each errori}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="page-header text-center" style="padding-top: 100px">
  <div class="row">
    <div class="fw-bold fs-1 hTitle">
      <p>{{headerTitle}}</p>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-align-self-center align-content-center">
      <form action="/" method="post" role="form">
        <div class="row g-3 justify-content-center align-content-center">
          <div class="col-sm-9 col-lg-6 col-md-8">
            <input
              type="text"
              class="form-control my-2"
              name="input"
              required
            />
            </div>
          </div>
          <div class="row g-3 justify-content-center align-content-center">
            <div class="col-lg-2 col-md-3 col-sm-4">
              <select class="form-select my-2" name="rec_num" required>
                <option value=""># of recipes</option>
                <option value="3">3</option>
                <option value="6">6</option>
                <option value="9">9</option>
                <option value="12">12</option>
                <option value="15">15</option>
              </select>
            </div>
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-primary">Find recipes!</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>